
<div class="container-fluid mt-5">
    <div class="container">
        <h1>{{title}}</h1>
        <hr>

        <div class="row">
        {{#each productos}}
            <div class="col-3">
                <a href="/productos/{{id}}">
                <div class="card mb-4 card-prod shadow-sm bg-dark">
                        {{#if imagen}}
                            <img  src="/images/{{imagen}}" class="card-img" alt="{{nombre}}">
                        {{else}}
                            <img  src="/images/default.png" class="card-img" alt="{{nombre}}">
                        {{/if}}
                    <div class="card-body">
                        <p class="h4 text-white">{{nombre}}</p>
                    </div>
                </div>
                </a>
            </div>
        {{/each}}
    </div>



    </div>
</div>